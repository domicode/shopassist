  <%= link_to showmap_path do %>
    <div id="jakob" class="shop">
      <div class="shop-title">
        St. Jakob Bäckerei,
        <span>Limmatplatz</span>
        <span class="distance">200m</span>
      </div>
      <class class="rating">&#x2605; &#x2605; &#x2605;</class>
      <%= image_tag('st_jakob_bakerei.jpg') %>
    </div>
  <% end %>
</div>

<div id="groceriesList" class="main-menu-list">
  <%= link_to root_path do %>
    <div id="list1" class="shop">
      <div class="list-title">
        Tuesday, 14/07/2015
      </div>
      <ul>
        <li>&#x2713; bread</li>
        <li>milk</li>
        <li>&#x2713; oranges</li>
        <li>&#x2713; apples</li>
        <li>&#x2713; pasta (gluten-free)</li>
        <li>&#x2713; onions</li>
        <li>tomatoes</li>
      </ul>
    </div>
  <% end %>


  <%= 10.times do |x| %>
    <%= link_to root_path do %>
      <div id="list2" class="shop">
        <div class="list-title collapsed">
          <%= (Time.new - 2*x.days).strftime('%A, %d/%m/%Y') %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
