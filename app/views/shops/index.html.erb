<div id="groceriesList" class="main-menu-list">

  <div id="list1" class="shop">
    <div class="list-title">
      Saturday, 11/07/2015
    </div>
    <ul>
      <li>&#x2713; bread</li>
      <li>milk</li>
      <li>&#x2713; oranges</li>
      <li>&#x2713; apples</li>
      <li>&#x2713; pasta (gluten-free)</li>
      <li>&#x2713; onions</li>
      <li>tomatoes</li>
    </ul>
  </div>


  <%= 10.times do |x| %>
    <%= link_to root_path do %>
      <div id="list2" class="shop">
        <div class="list-title collapsed">
          <%= (Time.new - 3*x.days).strftime('%A, %d/%m/%Y') %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div id="findProductList" class="main-menu-list">
  <div class="searchbox">
    <input id="storesearch" type="search" placeholder="search ..." value="apples">
  </div>

  <div id="apple" class="product">
    <div class="product-title">
      Apple Golden
    </div>
    <%= image_tag('apple.jpg') %>
    <div class="product-rating">&#x2605; &#x2605; &#x2605; &#x2605; &#x2605;</div>
  </div>

  <div id="apple" class="product">
    <div class="product-title">
      Apple Gala
    </div>
    <%= image_tag('apple.jpg') %>
    <div class="product-rating">&#x2605; &#x2605; &#x2605; &#x2605; &#x2605;</div>
  </div>

</div>
