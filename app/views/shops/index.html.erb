<header>
  <ul id="navigation">
    <li id="shops" class="navigation-option select"></li>
    <li id="artisans" class="navigation-option"></li>
    <li id="groceries" class="navigation-option"></li>
  </ul>
</header>


<div id="shopsList" class="main-menu-list">
  <div class="searchbox">
    <input id="storesearch" type="search" placeholder="search ..." value="Zürich">
  </div>
  <%= link_to showmap_path do %>
    <div id="migros" class="shop">
      <div class="shop-title">
        Migros,
        <span>Limmatplatz</span>
        <span class="distance">200m</span>
      </div>
      <div class="rating">&#x2605; &#x2605; &#x2605; &#x2605;</div>
      <%= image_tag('migros_limmatplatz.jpg') %>
    </div>
  <% end %>

  <%= link_to showmap_path do %>
    <div id="coop" class="shop">
      <div class="shop-title">
        Coop,
        <span>Röntgenstrasse 20</span>
        <span class="distance">400m</span>
      </div>
      <div class="rating">&#x2605; &#x2605; &#x2605; &#x2605;</div>
      <%= image_tag('coop_rontgestrasse.jpg') %>
    </div>
  <% end %>

  <%= link_to showmap_path do %>
    <div id="denner" class="shop">
      <div class="shop-title">
        Denner,
        <span>Röntgenstrasse 20</span>
        <span class="distance">1.5km</span>
      </div>
      <div class="rating">&#x2605; &#x2605; &#x2605;</div>
      <%= image_tag('denner.jpg') %>
    </div>
  <% end %>
</div>

